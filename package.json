{
  "name": "lexyhub",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky install",
    "scrape:etsy": "node scripts/etsy-scraper.mjs",
    "scrape:etsy-keywords": "node scripts/etsy-keyword-scraper.mjs",
    "scrape:etsy-best-sellers": "node scripts/etsy-best-sellers.mjs",
    "jobs:etsy-ingest": "tsx jobs/etsy-ingest/index.ts",
    "jobs:keyword-serp-sampler": "tsx jobs/keyword-serp-sampler.ts",
    "extension:build": "tsx apps/browser-extension/scripts/build-extension.ts",
    "db:seed": "tsx scripts/seed-db.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@ai-sdk/openai": "0.0.47",
    "@supabase/auth-helpers-nextjs": "0.9.0",
    "@supabase/auth-helpers-react": "0.5.0",
    "@supabase/supabase-js": "2.43.0",
    "@tanstack/react-table": "8.21.3",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "1.2.2",
    "@vercel/blob": "^2.0.0",
    "ai": "3.2.35",
    "next": "14.2.5",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "stripe": "14.25.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "24.10.0",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@vitest/coverage-v8": "^1.6.1",
    "archiver": "6.0.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "9.1.2",
    "lint-staged": "15.2.7",
    "playwright-core": "^1.56.1",
    "prettier": "3.3.3",
    "tsx": "^4.16.2",
    "typescript": "5.4.5",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,css,json}": [
      "prettier --check"
    ],
    "src/**/*.{ts,tsx}": [
      "next lint --max-warnings=0 --no-cache"
    ]
  }
}
