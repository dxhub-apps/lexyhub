{
  "manifest_version": 3,
  "name": "LexyHub Extension",
  "version": "4.0.0",
  "description": "Transform your marketplace browsing into keyword intelligence. Highlight verified keywords, get instant LexyBrain insights, and build your watchlist across Etsy, Amazon, eBay, Walmart, and Shopify.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.etsy.com/*",
    "https://www.amazon.com/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.it/*",
    "https://www.amazon.es/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.in/*",
    "https://www.amazon.com.au/*",
    "https://www.ebay.com/*",
    "https://www.ebay.ca/*",
    "https://www.ebay.co.uk/*",
    "https://www.walmart.com/*",
    "https://www.walmart.ca/*",
    "https://www.google.com/*",
    "https://www.pinterest.com/*",
    "https://www.pinterest.ca/*",
    "https://www.reddit.com/*",
    "https://app.lexyhub.com/*",
    "https://lexyhub.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.etsy.com/*"
      ],
      "js": [
        "content/etsy.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.it/*",
        "https://www.amazon.es/*"
      ],
      "js": [
        "content/amazon.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.google.com/search*"
      ],
      "js": [
        "content/google.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.bing.com/search*"
      ],
      "js": [
        "content/bing.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.pinterest.com/*",
        "https://www.pinterest.ca/*"
      ],
      "js": [
        "content/pinterest.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.reddit.com/*"
      ],
      "js": [
        "content/reddit.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content/shopify.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://www.etsy.com/*",
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.co.uk/*",
        "https://www.google.com/*",
        "https://www.bing.com/*",
        "https://www.pinterest.com/*",
        "https://www.reddit.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LexyHub"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content/styles.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
